{
  "include": ["src"],
  "exclude": [],
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "preserve",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
